                            </div>
                        </div>
                        <ValidationMessage For="@(() => ModelDTO.FirstName)" class="wt-form-error-msg" />
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="wt-form-lbl" for="email">Email</label>
                        <div class="relative flex items-center">
                            <InputText @bind-Value="ModelDTO.Email"
                                       id="email"
                                       class="@GetInputClass(() => ModelDTO.Email)"
                                       placeholder="Email address" />

                            <!-- icon wrap -->
                            <div class="w-[18px] h-[18px] absolute right-2 pointer-events-none">
                                <span class="material-symbols-rounded text-[18px]">
                                    mail
                                </span>
                            </div>
                        </div>
                        <ValidationMessage For="@(() => ModelDTO.Email)" class="wt-form-error-msg" />
                    </div>

                    <!-- Bio (Optional) -->
                    <div>
                        <label class="wt-form-lbl" for="bio">Bio (Optional)</label>
                        <div class="relative flex items-center">
                            <InputTextArea @bind-Value="ModelDTO.Bio"
                                           id="bio"
                                           class="@GetInputClass(() => ModelDTO.Bio)"
                                           placeholder="Tell us about yourself (max 500 characters)"
                                           rows="3" />
                        </div>
                        <ValidationMessage For="@(() => ModelDTO.Bio)" class="wt-form-error-msg" />
                    </div>

                    <!-- Password -->
                    <div>
                        <label class="wt-form-lbl" for="password">Password</label>
                        <div class="relative flex items-center">
                            <InputText @bind-Value="ModelDTO.Password"
                                       type="password"
                                       id="password"
                                       class="@GetInputClass(() => ModelDTO.Password)"
                                       placeholder="Enter password (min 7 characters)" />

                            <!-- icon wrap -->
                            <div class="w-[18px] h-[18px] absolute right-2 pointer-events-none">
                                <span class="material-symbols-rounded text-[18px]">
                                    lock
                                </span>
                            </div>
                        </div>
                        <ValidationMessage For="@(() => ModelDTO.Password)" class="wt-form-error-msg" />
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label class="wt-form-lbl" for="confirmPassword">Confirm Password</label>
                        <div class="relative flex items-center">
                            <InputText @bind-Value="ModelDTO.ConfirmPassword"
                                       type="password"
                                       id="confirmPassword"
                                       class="@GetInputClass(() => ModelDTO.ConfirmPassword)"
                                       placeholder="Confirm password" />

                            <!-- icon wrap -->
                            <div class="w-[18px] h-[18px] absolute right-2 pointer-events-none">
                                <span class="material-symbols-rounded text-[18px]">
                                    lock
                                </span>
                            </div>
                        </div>
                        <ValidationMessage For="@(() => ModelDTO.ConfirmPassword)" class="wt-form-error-msg" />
                    </div>

                    <!-- Country Code dropdown -->
                    <div>
                        <label class="wt-form-lbl" for="countryCode">Country Code</label>
                        <div class="relative flex items-center">
                            <InputSelect @bind-Value="ModelDTO.CountryCode"
                                         id="countryCode"
                                         class="@GetInputClass(() => ModelDTO.CountryCode)">
                                <option value="">Select Country Code</option>
                                @foreach (var countryCode in countryCodes)
                                {
                                    <option value="@countryCode.Code">@countryCode.Name</option>
                                }
                            </InputSelect>
                            <!-- icon wrap -->
                            <div class="w-[18px] h-[18px] absolute right-2 pointer-events-none">
                                <span class="material-symbols-rounded text-[18px]">
                                    public
                                </span>
                            </div>
                        </div>
                        <ValidationMessage For="@(() => ModelDTO.CountryCode)" class="wt-form-error-msg" />
                    </div>

                    <!-- Accept Terms -->
