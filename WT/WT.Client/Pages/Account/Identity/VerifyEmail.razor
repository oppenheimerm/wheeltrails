@inject IAccountService AccountService
@inject NavigationManager NavigationManager

@using Microsoft.AspNetCore.Components.Authorization

@page "/account/identity/verify-email"

<PageTitle>WheelyTrails - Verify Email</PageTitle>

@code {
    [SupplyParameterFromQuery(Name = "token")]
    public string? Token { get; set; }

    private VerifyEmailDTO ModelDTO { get; set; } = new();
    private bool isVerifying = false;
    private bool verificationComplete = false;
    private string? errorMessage;
    private string? successMessage;
    private VerificationState currentState = VerificationState.Loading;

    private enum VerificationState
    {
        Loading,
        Success,
        Error,
        MissingToken
    }

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine($"Verify Email page initialized. Token present: {!string.IsNullOrEmpty(Token)}");

        // Check if token is provided
        if (string.IsNullOrEmpty(Token))
        {
            currentState = VerificationState.MissingToken;
            errorMessage = "Verification token is missing from the URL.";
            Console.WriteLine("❌ No verification token provided");
            return;
        }

        // Set token and auto-verify
        ModelDTO.Token = Uri.UnescapeDataString(Token);
        await VerifyEmailAsync();
    }

    private async Task VerifyEmailAsync()
    {
        if (string.IsNullOrEmpty(ModelDTO.Token))
        {
            currentState = VerificationState.Error;
            errorMessage = "Verification token is required.";
            return;
        }

        try
        {
            isVerifying = true;
            currentState = VerificationState.Loading;
            StateHasChanged();

            Console.WriteLine($"🔍 Attempting to verify email with token length: {ModelDTO.Token.Length}");

            var response = await AccountService.VerifyEmailAsync(ModelDTO.Token);

            Console.WriteLine($"Response received. Success: {response.Success}");

            if (response.Success)
            {
                Console.WriteLine("✅ Email verification successful!");
                currentState = VerificationState.Success;
                successMessage = response.Message;
                verificationComplete = true;

                // Auto-redirect to login after 3 seconds
                await Task.Delay(3000);
                NavigationManager.NavigateTo("/account/identity/login", forceLoad: false);
            }
            else
            {
                Console.WriteLine($"❌ Email verification failed: {response.Message}");
                currentState = VerificationState.Error;
                errorMessage = response.Message;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Exception during verification: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            currentState = VerificationState.Error;
            errorMessage = "An unexpected error occurred during verification. Please try again or contact support.";
        }
        finally
        {
            isVerifying = false;
            StateHasChanged();
        }
    }

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/account/identity/login", forceLoad: false);
    }

    private void NavigateToRegister()
    {
        NavigationManager.NavigateTo("/account/identity/register", forceLoad: false);
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/", forceLoad: false);
    }
}

